# -- Exit on errors.

set -eu


# -- Functions.

log() {
    logger -t power-refresh-rate "BAT: $1"
}

get_modes_for_edp() {
    kscreen-doctor -o | grep "Output: .*eDP-1" | sed -n 's/.*Modes: //p' | \
    tr ' ' '\n' | cut -d: -f2 | tr -d '!*\r' | sort -u
}


select_low_refresh_mode() {
    highest_res=$(printf "%s\n" "$1" | cut -d@ -f1 | sort -nr | head -n1)
    printf "%s\n" "$1" | grep "^$highest_res@" | sort -t@ -k2 -n | head -n1
}


# -- Change internal display refresh rate automatically.

modes=$(get_modes_for_edp)
mode=$(select_low_refresh_mode "$modes")

if [ -n "$mode" ]; then
    if kscreen-doctor output.eDP-1.mode."$mode" 2>/dev/null; then
        log "Applied mode $mode"
    else
        log "Failed to apply mode $mode"
    fi
else
    log "No valid mode found"
fi
