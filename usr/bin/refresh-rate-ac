# -- Exit on errors.

set -eu


# -- Functions.

log() {
    logger -t power-refresh-rate "AC: $1"
}

get_modes_for_edp() {
    safe_kscreen_doctor | grep "Output: .*eDP-1" | sed -n 's/.*Modes: //p' | \
    tr ' ' '\n' | sed 's/.*://' | tr -d '!*\r' | grep -E '^[0-9]+x[0-9]+@[0-9]+' | sort -u
}

select_high_refresh_mode() {
    highest_res=$(printf "%s\n" "$1" | grep '@' | cut -d@ -f1 | sort -nr | head -n1)
    printf "%s\n" "$1" | grep "^$highest_res@" | sort -t@ -k2 -nr | head -n1
}

get_current_mode_for_edp() {
    safe_kscreen_doctor | awk '
        /Output: [0-9]+ eDP-1 .*@[0-9]+/ {
            for (i = 1; i <= NF; i++) {
                if ($i ~ /^[0-9]+x[0-9]+@[0-9]+$/) {
                    print $i
                    exit
                }
            }
        }
    '
}

safe_kscreen_doctor() {
    kscreen-doctor -o 2>/dev/null || {
        log "kscreen-doctor failed to run"
        exit 1
    }
}


# -- Change internal display refresh rate automatically.

modes=$(get_modes_for_edp)
mode=$(select_high_refresh_mode "$modes")
current_mode=$(get_current_mode_for_edp)

if [ -n "$mode" ]; then
    if [ "$mode" = "$current_mode" ]; then
        log "Mode $mode already active, skipping"
        exit 0
    fi
    if kscreen-doctor output.eDP-1.mode."$mode" 2>/dev/null; then
        log "Applied mode $mode"
    else
        log "Failed to apply mode $mode"
    fi
else
    log "No valid mode found"
fi
