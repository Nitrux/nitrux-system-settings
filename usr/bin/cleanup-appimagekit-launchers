set -eu


# -- Variables.

directory="$HOME/.local/share/applications"
keywords=("clip" "buho" "NX_Software_Center" "pix" "vvave" "Hardware_Probe" "strike" "VMetal" "bonsai" "shelf" "nota" "bauh")
clean_launchers_log="$HOME/.clean-launchers.log"


# -- Remove these launchers from the home.

(
  sleep 3

  while true; do
    no_files_found=true

    for keyword in "${keywords[@]}"; do
      files=$(find "$directory" -type f -name "appimagekit_*${keyword}*.desktop")
      if [ -n "$files" ]; then
        no_files_found=false
        echo "Files found for keyword '$keyword':" | tee -a "$clean_launchers_log"
        echo "$files" | tee -a "$clean_launchers_log"
        echo "Deleting..." | tee -a "$clean_launchers_log"
        echo "$files" | xargs rm -f
      fi
    done

    if "$no_files_found"; then
      echo "No matching launchers found. Sleeping..." | tee -a "$clean_launchers_log"
    fi

    sleep 60 
  done

) 2>&1 | tee -a "$clean_launchers_log"
